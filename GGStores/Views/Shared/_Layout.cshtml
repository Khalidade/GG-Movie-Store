<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GGStores</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GGStores.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
   
</head>
<body id="back-ground" style="padding-top: 70px;">
    <header class="" style="position: fixed; top: 0; z-index: 1000; width: 100%;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  text-white box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Movie" asp-action="Index">GGStores</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-start" style="position: relative; left: 170px;">
                    <ul class="navbar-nav d-flex">
                        <li class="navbar-nav flex-grow-1">
                            <a class="nav-link" asp-controller="Movie" asp-action="Index"><i class="badge-info bi bi-film"></i>Movies</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="bi bi-gear"></i>Management
                            </a>

                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-controller="Cinema" asp-action="Index"><i class="bi bi-camera-reels"></i>Cinema</a>
                                <a class="dropdown-item" asp-controller="Producer" asp-action="Index"><i class="bi bi-headset"></i>Producers</a>
                                <a class="dropdown-item" asp-controller="Actors" asp-action="Index"><i class="bi bi-person-square"></i>Actors</a>
                            </div>
                        </li>
                    </ul>

                    <form class="form-inline my-2 my-lg-0 d-flex" asp-controller="Movie" asp-action="Filter" style="padding-right: 25px;">
                        
                            <!-- Add a form-group wrapper -->
                            <input name="searchString" type="text" class="form-contro" placeholder="Search......." style="width: 800px; height:40px">
                       
                        
                            <!-- Add a form-group wrapper -->
                            <button class="btn btn-outline-success my-2 my-sm-0 form-contro"  type="submit"><i class="bi bi-search"></i></button>
                        
                    </form>

                </div>
            </div>
        </nav>

    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3 text-white">
            @RenderBody() 
        </main>
    </div>

    <footer class=" footer text-muted">
        <div class="container">
            &copy; 2023 - GGStores 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
